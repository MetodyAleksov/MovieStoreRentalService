@using MovieStoreRentalService.DTO
@{
    RentalDTO rental = (RentalDTO)ViewData["Rental"];
    string id = (string)ViewData["rentalId"];
}

<!-- general form elements -->
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Edit rental</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-controller="Rental" asp-action="Edit">
        <div class="card-body">
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" class="form-control" id="Name" name="Name" value="@(rental.Name)">
            </div>
            <div class="form-group">
                <label for="ImageUrl">Cover URL</label>
                <input type="url" class="form-control" id="ImageUrl" name="ImageUrl" value="@(rental.ImageURL)">
            </div>
            <!-- select -->
            <div class="form-group">
                <label>Custom Select</label>
                <select class="custom-select" name="Type">
                    <option>Movie</option>
                    <option>Video Game</option>
                </select>
            </div>
            <div class="form-group">
                <label for="AmounAvailable">Available Units</label>
                <input type="number" class="form-control" name="AmountAvailable" id="AmounAvailable" value="@(rental.AmountAvailable)">
            </div>
            <div class="form-group">
                <label for="Price">Price</label>
                <input type="number" step="0.01" class="form-control" name="Price" id="Price" value="@(rental.Price)">
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <input type="text" class="form-control" id="Description" name="Description" value="@(rental.Description)">
            </div>
            <div class="form-group">
                <label for="Description">Movie Director</label>
                <input type="text" class="form-control" id="MovieDirector" name="MovieDirector" value="@(rental.DirectorName)">
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" name="Id" value="@(id)" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
