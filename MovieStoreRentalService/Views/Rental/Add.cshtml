<!-- general form elements -->
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Add new rental</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-controller="Rental" asp-action="Add">
        <div class="card-body">
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" class="form-control" id="Name" name="Name" placeholder="Name...">
            </div>
            <div class="form-group">
                <label for="ImageUrl">Cover URL</label>
                <input type="url" class="form-control" id="ImageUrl" name="ImageUrl" placeholder="https://example.example/...">
            </div>
            <!-- select -->
            <div class="form-group">
                <label>Custom Select</label>
                <select class="custom-select" name="Type">
                    <option>Movie</option>
                    <option>Video Game</option>
                </select>
            </div>
            <div class="form-group">
                <label for="AmounAvailable">Available Units</label>
                <input type="number" class="form-control" name="AmountAvailable" id="AmounAvailable" placeholder="1">
            </div>
            <div class="form-group">
                <label for="Price">Price</label>
                <input type="number" step="0.01" class="form-control" name="Price" id="Price" placeholder="0.01">
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <input type="text" class="form-control" id="Description" name="Description" placeholder="Something...">
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
